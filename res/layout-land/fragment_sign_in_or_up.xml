<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_activity_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/u1_tiles_fading">
    
    <LinearLayout
        android:id="@+id/center_h"
        
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@color/sso.orange" />
    
    <LinearLayout
        android:id="@+id/center_v"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@color/sso.orange_light" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        
        android:src="@drawable/u1_logo_color_n" />
    
    <ImageView
        android:id="@+id/cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/center_h"
        
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        
        android:layout_marginBottom="0dp"
        
        android:src="@drawable/slide0" />
    
    <TextView
        android:id="@+id/u1f"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cloud"
        android:layout_alignLeft="@id/cloud"
        android:layout_alignRight="@id/cloud"
        
        android:gravity="center_horizontal"
        
        android:layout_centerHorizontal="true"
        
        android:layout_marginTop="@dimen/body_copy_2"
        
        android:textSize="@dimen/text_size_large"
        android:text="@string/app_name" />
	
    <Button
		android:id="@+id/new_account"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/center_h"
		android:layout_below="@id/center_v"		
		
		android:layout_centerHorizontal="true"
		
		android:layout_marginTop="3dp"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="22dp"
		android:layout_marginLeft="20dp"
		
		android:minHeight="46dp"
		
		android:background="@drawable/button_grey"
		
		android:textColor="@color/text_dark_grey"
		android:textSize="@dimen/text_size_medium"
		android:text="@string/new_account" />
    
	<Button
		android:id="@+id/sign_in"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/center_h"
		android:layout_above="@id/center_v"
		android:layout_alignLeft="@id/new_account"
		android:layout_alignRight="@id/new_account"
		
		android:layout_marginBottom="3dp"
		
		android:minHeight="46dp"
		
		android:background="@drawable/button_grey"
		
		android:textColor="@color/text_dark_grey"
		android:textSize="@dimen/text_size_medium"
		android:text="@string/sign_in" />
	
</RelativeLayout>
